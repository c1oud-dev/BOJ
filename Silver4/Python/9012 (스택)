#13:15 - 13:37

import sys
input = sys.stdin.readline

for _ in range(int(input())):
    cnt = 0
    t = list(input().rstrip())
    for i in t:
        if i == '(':
            cnt += 1
        elif i == ')':
            cnt -= 1
        if cnt < 0:
            break
    if cnt != 0:
        print("NO")
    else:
        print("YES")
        
